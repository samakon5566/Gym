
@{
    ViewData["Title"] = "客製化課程_資訊蒐集";
}

@section Style{
    <style>
        .drop {
            margin: 20px auto;
            height: 100px;
            background-color: gray;
            border-radius: 10px;
        }
        .modal-content .modal-body .each-comment{
            height:25px;
        }
        /*想請冠宇改的部分*/
        .vacancy{

        }
        .form-group{
            font-size:20px
        }
        * {
            font-weight: 800;
            font-family: "Oswald", sans-serif;
        }
        .outer-purchase-frame h2{
            font-weight:900;
            margin-top:10px;
            margin-bottom:25px;
        }
        input{
            font-size:20px;
            font-weight:800;
        }
        .drop div{
            margin:15px; 
        }
        th,td{
            text-align:center;
        }
        #exampleModal .modal-header{
            justify-content: space-between;
        }
        #exampleModal .modal-title{
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            /* justify-content: flex-end; */
            flex-direction: column;
            align-content: space-around;
        }
        #exampleModal .close{
            position:absolute;
            right: 15px;
        }
    </style>
}
<section class="outer-frame">
    <div class="div-container-out">
        <div class="div-container">
            <h2 class="topheader-title">客　製　化　課　程</h2>
            <img src="~/img/topheader/TH-Customer.jpg" />
        </div>
    </div>
</section>

<div class="outer-purchase-frame">
    <div style="width:70%" class="purchase-frame">
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn-title btn text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            您的生理資訊
                        </button>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <form class="Customization-form">
                            <div class="div-purchase-BMR">
                                <div>
                                    <h2>
                                        BMR計算:
                                    </h2>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-5">
                                        <label for="inputHeight">身高</label>
                                        <input type="text" class="form-control" id="inputHeight">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="inputWeight">體重</label>
                                        <input type="text" class="form-control" id="inputWeight">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-5">
                                        <label for="inputAge">年齡</label>
                                        <input type="text" class="form-control" id="inputAge">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="inputGender">性別</label>
                                        <select id="inputGender" class="form-control">
                                            <option selected>男性</option>
                                            <option>女性</option>
                                        </select>
                                    </div>
                                    <div class="m-2">
                                        <a class="btn btn-calculate" style="font-size:24px; font-weight:900">計算</a>
                                        <a class="btn" id="Demo1">Demo鍵</a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row form-block1">
                                <div class="form-group col-md-8 flex-grop">
                                    <label for="inputConsume" class="groplb1">BMR每日總熱量消耗</label>
                                    <input type="text" disabled="disabled" placeholder="修改請點選重新計算" class="form-control grop-control" id="inputConsume">
                                </div>
                            </div>
                            <div>
                                <h2>
                                    您的飲食習慣:
                                </h2>
                            </div>
                            <div  class="m-2">
                                <label>依照標示顏色區分熱量高低 由高至低分別是(紅>橘>藍>黑>灰>綠)</label>
                            </div>
                            <div  class="m-2">
                                <div id="foodblock">
                                    <div type="button" class="btn-dark btn" data-type="burger" data-num="1" data-cal="300">漢堡</div>
                                    <div type="button" class="btn-secondary btn" data-type="beverage" data-num="1" data-cal="140">手搖杯飲料(半糖)</div>
                                    <div type="button" class="btn-success btn" data-type="juice" data-num="1" data-cal="50">果汁</div>
                                    <div type="button" class="btn-warning btn" data-num="1" data-type="fried" data-cal="630">炸物(雞排)</div>
                                    <div type="button" class="btn-danger btn" data-num="1" data-type="bento" data-cal="960">便當(三寶飯)</div>
                                    <div type="button" class="btn-dark btn" data-num="1" data-type="cuisine" data-cal="300">高麗菜水餃(5顆)</div>
                                    <div type="button" class="btn-primary btn" data-num="1" data-type="healthydishes" data-cal="550">健康餐(滷雞腿餐)</div>
                                </div>
                                <div class="drop" style="background-color: #80808099; filter: invert(1);">

                                </div>

                            </div>
                            <div  class="m-2">
                                <h2>
                                    平衡後的每日熱量:
                                </h2>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-8 flex-grop">
                                    <label for="inputBalance">每日總熱量平衡值</label>
                                    <input type="text" disabled="disabled" class="form-control" id="inputBalance">
                                    <label for="inputBalance groplb">註:(正值代表您多減少的熱量,負值代表您須多減少的熱量)</label>
                                </div>
                            </div>
                            <div  class="m-2">
                                <h2>
                                    您的期望:
                                </h2>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label for="inputExpection">目標體重</label>
                                    <input type="text" class="form-control" id="inputExpection">
                                </div>
                                <div class="form-group col-md-5">
                                    <label for="inputState">達標期限</label>
                                    <input type="date" class="form-control" id="inputExpire">
                                </div>
                            </div>
                            <div class="form-row" style="margin-top:50px; justify-content: center;">                             
                                <div class="form-group flex-grop">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="gridCheck">
                                        <label class="form-check-label" for="gridCheck">
                                            確認請點選
                                        </label>
                                    </div>
                                    <input type="button" disabled="disabled" class="btn btn-primary m-left" id="1st-save" value="確認儲存,下一步">           
                                </div>                             
                            </div>
                            <div class="form-row">
                                <div id="slogan" class="col-md-20"><div id="slogan1"></div><div id="slogan2"></div><div id="slogan3"></div><div id="slogan4"></div></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn-title btn text-left collapsed" type="button"  data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            安排您的課程
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <form class="Customization-form">
                            <div>
                                <h2>
                                    選取你有興趣的課程:
                                </h2>
                            </div>
                            @*隨機撥放照片*@
                            <div class="form-row class-category">
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype1">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/進階階梯有氧.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype1" data-type="1">有氧</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype2">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/泰拳.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype2" data-type="2">拳擊</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype3">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/空中瑜珈.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype3" data-type="3">瑜珈</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype4">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/女性一對一重訓.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype1" data-type="4">重量訓練</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype5">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/燃脂飛輪.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype5" data-type="5">飛輪</label>
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="button" class="btn" id="btntype6">
                                        <div class="img-bx-16">
                                            <img src="~/img/CourseDetail/TRX-核心.jpg" />
                                        </div>
                                    </button>
                                    <label for="btntype6" data-type="6">TRX</label>
                                </div>
                            </div>
                            <div>
                                <h2>
                                    挑選時間:
                                </h2>
                            </div>
                            <table id="purch-list" class="table-sm">
                                <thead>
                                    <tr style="visibility: hidden;">
                                        <td width="5%">
                                        <td width="19%">
                                        <td width="19%">
                                        <td width="19%">
                                        <td width="19%">
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th>課程種類</th>
                                        <th>課程類型</th>
                                        <th>課程班別</th>
                                        <th>課堂資訊</th>
                                        <th>金額</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                            <div id="progress-bar-b">
                                <h2>
                                    達標進度:
                                </h2>
                                <div class="progress">
                                  <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" style="width: 0%"></div>
                                </div>
                                <div>
                                    <h5 id="txt-notice"></h5>
                                </div>
                            </div>
                            <div class="form-row" style="margin-top:50px; justify-content: center;">                             
                                <div class="form-group flex-grop">    
                                    <a  style="color:black" class="btn btn-primary m-left" id="2st-save" >前往結帳</a>       
                                </div>                                
                            </div>
                            <div class="form-row">
                                <div id="command" class="col-md-20"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">課程名稱(ex:戰繩有氧)</h5>
                <h5 id="vacancy"></h5>
                <a class="close" data-dismiss="modal"><i class="fas fa-times"></i></a> 
            </div>
            <div class="modal-body">
                <div class="each-comment">
                    
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn" data-dismiss="modal">關閉</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js" integrity="sha256-hlKLmzaRlE8SCJC1Kw8zoUbU8BxA+8kR3gseuKfMjxA=" crossorigin="anonymous"></script>
    <script src="~/js/客製化課程.js"></script>
    <script>
        $(function(){
            
            $("#2st-save").click(function () {
                var classid=[];
                $(".classid").each(function(index,value){
                    classid.push($(value).text());
                })

                if(classid.length < 1)
                {
                    $("#command").text("請選課程才能夠購買課程");
                    return;
                }
                

                const Jsonclassid = JSON.stringify(classid).replaceAll("\"","");
                $(this).attr("href",`@Url.Content("~/Purchase/OrderPurchaselistAll/")${Jsonclassid}`);
            })
        })
    </script>
}
