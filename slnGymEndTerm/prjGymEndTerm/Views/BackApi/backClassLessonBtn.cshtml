    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </a>
</div>
<div class="modal-body">
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
