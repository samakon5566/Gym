<script src='//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js'></script>
<script src='//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js'></script>
<link href='//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css' rel='stylesheet' />

<div class="backCBody">
    <div class="frame">
        <h1 class="coachTitle">課程總覽</h1>

        @using (Html.BeginForm(FormMethod.Post, new { @class = "form" }))
        {
            @*<a class="btn btn-warning rounded-pill addbtn" data-toggle="modal" href="#ClassCreat"><i class="far fa-calendar-plus"></i> 新增課程</a>*@
            <a asp-action="backCourseClassCreate" class="btn btn-warning rounded-pill addbtn"><i class="far fa-calendar-plus"></i> 新增課程</a>
        }
    </div>

    <div class="page-breadcrumb">
        <nav aria-label="breadcrumb" style="border-top: 1px solid #ADADAD ">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href=@Url.Action("List", "BackHome") class="breadcrumb-link">首頁</a></li>
                <li class="breadcrumb-item active" aria-current="page">課程總覽</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4" style=" padding: 5px 0;">

                    <div id="beforeSelect" class="m-b-10">
                        <p style="display: inline; font-size: 16px; color: #71748d ">課程篩選：</p>
                        <div id="selectDiv" style="display: inline; font-size: 16px;"></div>
                    </div>

                    <table id="myTable" class="display " style="width:100%">
                        <thead>
                            <tr>
                                <th class="th6">序號</th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.CourseCategoryName)
                                </th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.CourseDetailName)
                                </th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.CourseClassCoach)
                                </th>
                                <th class="th20">
                                    @Html.DisplayNameFor(model => model.CourseClassName)
                                </th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.CourseClassPeople)
                                </th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.ClassroomName)
                                </th>
                                <th class="th15">
                                    @Html.DisplayNameFor(model => model.DiscountPlanName)
                                </th>
                                <th class="">
                                    @Html.DisplayNameFor(model => model.NumberOfApplicants)
                                </th>
                                <th hidden>
                                    @Html.DisplayNameFor(model => model.CourseClassId)
                                </th>
                                <th class="th15">課程明細 / 異動</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 0;
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td class="th6">
                                            @count
                                        </td>
                                        <td class="th77">
                                            @Html.DisplayFor(modelItem => item.CourseCategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseDetailName)
                                        </td>
                                        <td class="th77">
                                            @Html.DisplayFor(modelItem => item.CourseClassCoach)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseClassName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseClassPeople)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClassroomName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiscountPlanName)
                                        </td>
                                        <td id="countTd">
                                            @Html.DisplayFor(modelItem => item.NumberOfApplicants)
                                        </td>
                                        <td hidden>
                                            @item.CourseClassId
                                        </td>
                                        <td>
                                            <a class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#exampleModal" style="color:white" id="lessonBtn"><i class="fas fa-bars"></i></a>
                                            <a class="btn btn-success rounded-pill" href="@Url.Action("backCourseClassEdit", "Backstage", new { id = item.CourseClassId })"><i class="fas fa-pencil-alt"></i></a>
                                            <a class="btn btn-danger rounded-pill" href="@Url.Action("backCourseClassDelete", "Backstage", new { id = item.CourseClassId })" onclick="return confirm ('確定要刪除嗎?')"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="lessonLoad">

            </div>
            <div class="modal-footer justify-content-center">
                <a href="#" class="btn btn-secondary w-50" data-dismiss="modal">OK</a>
            </div>
        </div>
    </div>
</div>



<script>
    $('#myTable').DataTable({
        language: {
            "emptyTable": "無資料...",
            "processing": "處理中...",
            "loadingRecords": "載入中...",
            "lengthMenu": "每頁 _MENU_ 筆資料",
            "zeroRecords": "無搜尋結果",
            "info": "_START_ 至 _END_ / 共 _TOTAL_ 筆",
            "infoEmpty": "尚無資料",
            "infoFiltered": "(從 _MAX_ 筆資料過濾)",
            "infoPostFix": "",
            "search": "搜尋:",
            "paginate": {
                "first": "首頁",
                "last": "末頁",
                "next": "下一頁",
                "previous": "上一頁"
            },
            "aria": {
                "sortAscending": ": 升冪",
                "sortDescending": ": 降冪"
            }
        }
    });

    var table = $('#myTable').DataTable();
    table.columns([1,3,7]).flatten().each(function (colIdx) {
        // Create the select list and search operation
        var theadname = $("#myTable th").eq([colIdx]).text(); //used this specify table name and head
        var select = $('<select class="m-l-10" style="width:10%"><option value="">' + theadname + '</option></select>')
            .appendTo('#selectDiv')
            .on('change', function () {
                table
                    .column(colIdx)
                    .search($(this).val())
                    .draw();
            });

        // Get the search data for the first column and add to the select list
        table
            .column(colIdx)
            .cache('search')
            .sort()
            .unique()
            .each(function (d) {
                select.append($('<option value="' + d + '">' + d + '</option>'));
            });
    });
</script>

@section Scripts {

    <script>

        $('#myTable>tbody').on('click', 'a:nth-child(1)', function () {

            const classId = $(this).parents('tr').find('td:nth-child(10)').text().trim()

            $('#lessonLoad').load('@Url.Content("~/BackApi/backClassLessonBtn?classId=")' + classId)


        })



    </script>
}








