
@{
    ViewData["Title"] = "一對一課程介紹";
}
<style>
    .intro-title16 {
        font-weight: bold;
        font-family: Helvetica;
        top: 50%;
        left: 45%;
        position: absolute;
        color: white;
        opacity: 1;
    }

    .CourseIntroduction_section {
    }

    .CourseIntroduction_div_Out {
        margin: 0 auto;
        width: 70%;
        height: 1000px;
        display: flex;
        flex-wrap: wrap;
        align-content: start;
    }

    .CourseIntroduction_div {
        margin: 0px auto;
        height: 50%;
        width: 50%;
    }

    .CourseIntroduction_div_kind {
        padding: 7.5% 15%;
        height: 100%;
        width: 100%;
        border-radius: 5px;
        border: 2px;
        border-color: white;
        position: relative;
        display: flex;
        flex-wrap: wrap;
        align-content: start;
        text-align: center;
    }

        .CourseIntroduction_div_kind p {
            font-size: 24px;
            color: white;
            margin: 2em auto;
        }

    .CourseIntroduction_div_img {
        border-radius: 15px;
        width: 100%;
        height: 80%;
        border-radius: 15px;
    }

    .a_hoverWarp {
        padding: 10%;
        position: absolute;
        background-color: black;
        border-radius: 15px;
        width: 70%;
        height: 65%;
        opacity: 0;
        border-bottom: 15px solid #ff6a00;
    }

        .a_hoverWarp:hover {
            opacity: 0.7;
        }

        .a_hoverWarp p, .a_hoverWarp a {
            width: auto;
            height: auto;
            left: auto;
            margin: auto;
        }


        .a_hoverWarp a {
            font-size: 50px;
            /*123*/
        }
</style>

<section class="outer-frame">
    <div class="div-container-out">
        <div class="div-container">
            <h2 class="topheader-title">一　對　一　課　程　介　紹</h2>
            <img src="~/img/16img/background/backgroundonecourse6.jpg" />
        </div>
    </div>
</section>
<section class="web-path">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="breadcrumb-text">
                <div class="bt-option">
                    <a asp-controller="BackHome" asp-action="List">主頁</a>
                    <span>一對一課程介紹</span>
                </div>
            </div>
        </div>
    </div>
</section>
