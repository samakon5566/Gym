    <div class="CourseIntroduction_div_Out">
        <div class="CourseIntroduction_div">
            <div class="CourseIntroduction_div_kind">
                <img id="CourseIntroduction_img" src="~/img/16img/pic1.jpg" class="CourseIntroduction_div_img" />
                <div class="a_hoverWarp">
                    <a asp-controller="OneCourse" asp-action="一對一課程介紹_1器材訓練">
                        <i class="fas fa-arrow-circle-right" style="font-size:200px;color:orange"></i>
                    </a>
                </div>
                <p style="text-align: center;">器　材　訓　練</p>
            </div>
        </div>
        <div class="CourseIntroduction_div">
            <div class="CourseIntroduction_div_kind">
                <img src="~/img/16img/intrdition2.jpg" class="CourseIntroduction_div_img" />
                <div class="a_hoverWarp">
                    <a asp-controller="OneCourse" asp-action="一對一課程介紹_2自由重量" style="margin:auto">
                        <i class="fas fa-arrow-circle-right" style="font-size:200px;color:orange;"></i>
                    </a>
                </div>
                <p>自　由　重　量</p>
            </div>
        </div>
        <div class="CourseIntroduction_div">
            <div class="CourseIntroduction_div_kind">
                <img src="~/img/16img/Diet.jpg" class="CourseIntroduction_div_img" />
                <div class="a_hoverWarp">
                    <a asp-controller="OneCourse" asp-action="一對一課程介紹_3飲食控制">
                        <i class="fas fa-arrow-circle-right" style="font-size:200px;color:orange"></i>
                    </a>
                </div>
                <p style="text-align: center;">飲　食　控　制</p>
            </div>
        </div>
        <div class="CourseIntroduction_div">
            <div class="CourseIntroduction_div_kind">
                <img src="~/img/16img/sleep.jpg" class="CourseIntroduction_div_img" />
                <div class="a_hoverWarp">
                    <a asp-controller="OneCourse" asp-action="一對一課程介紹_4生活型態">
                        <i class="fas fa-arrow-circle-right" style="font-size:200px;color:orange"></i>
                    </a>
                </div>
                <p>生　活　型　態</p>
            </div>
        </div>
        <div style="height:20%;width:100%;"></div>
    </div>
</section>
<div style="width:100%;height:300px"></div>
